  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/packages/frontend",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Local.+(https?://.+)",
        "killOnServerStop": true,
        "webRoot": "${workspaceFolder}/packages/frontend/src"
      },
      "presentation": {
        "group": "50",
        "order": 3
      }
    }
  ]
}
