{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["CARDFOLIO_*"],
  "globalEnv": ["CARDFOLIO_*"],
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["LOGLEVEL"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "outputLogs": "errors-only",
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.{ts,tsx,css,rs}",
        "!src/**/*.test.{ts,tsx}",
        "package.json",
        "Cargo.toml",
        "tsconfig.json",
        "tsconfig.*.json",
        "vite.config.ts",
        "$TURBO_ROOT$/packages/tsconfig/**/*"
      ],
      "env": ["CARDFOLIO_*"],
      "outputs": ["dist/**/*", "$TURBO_ROOT$/target/**/*"]
    },
    "test": {
      "outputLogs": "errors-only",
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.{ts,tsx,css,rs}",
        "vitest.config.ts",
        "package.json",
        "Cargo.toml",
        "tsconfig.json",
        "tsconfig.*.json",
        "vite.config.ts",
        "$TURBO_ROOT$/packages/tsconfig/**/*"
      ]
    },
    "test:cov": {
      "outputLogs": "errors-only",
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.{ts,tsx,css,rs}",
        "vitest.config.ts",
        "package.json",
        "Cargo.toml",
        "tsconfig.json",
        "tsconfig.*.json",
        "vite.config.ts",
        "tsup.config.ts",
        "$TURBO_ROOT$/packages/tsconfig/**/*"
      ],
      "outputs": ["lcov.info"]
    },
    "lint": {
      "outputLogs": "errors-only",
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.{ts,tsx,css,rs}",
        "vitest.config.ts",
        "package.json",
        "Cargo.toml",
        "tsconfig.json",
        "tsconfig.*.json",
        "vite.config.ts",
        "$TURBO_ROOT$/dprint.jsonc",
        "$TURBO_ROOT$/eslint.config.js",
        "$TURBO_ROOT$/packages/tsconfig/**/*"
      ]
    },
    "lint:fix": {
      "outputLogs": "errors-only",
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.{ts,tsx,css,rs}",
        "vitest.config.ts",
        "package.json",
        "Cargo.toml",
        "tsconfig.json",
        "tsconfig.*.json",
        "vite.config.ts",
        "$TURBO_ROOT$/dprint.jsonc",
        "$TURBO_ROOT$/eslint.config.js",
        "$TURBO_ROOT$/packages/tsconfig/**/*"
      ],
      "outputs": ["src/**/*"]
    }
  }
}
